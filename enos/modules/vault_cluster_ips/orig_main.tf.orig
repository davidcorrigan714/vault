terraform {
  required_providers {
    enos = {
      source = "app.terraform.io/hashicorp-qti/enos"
    }
  }
}

variable vault_instance_pub_ip{
  type        = string
  description = "The public IP of one Vault instance"
}

variable "vault_install_dir" {
  type        = string
  description = "The directory where the Vault binary will be installed"
}

variable "vault_root_token" {
  type        = string
  description = "The vault root token"
}

resource "enos_remote_exec" "get_primary_cluster_ips" {
  for_each = local.instances

  content = templatefile("${path.module}/templates/get_primary_cluster_ips.sh", {
    vault_install_dir       = var.vault_install_dir
    vault_local_binary_path = "${var.vault_install_dir}/vault"
    vault_token             = var.vault_root_token
  })

  transport = {
    ssh = {
      host = var.vault_instance_pub_ip
    }
  }
}
